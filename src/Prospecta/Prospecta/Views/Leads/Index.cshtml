@model IEnumerable<Prospecta.Models.Lead>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Leads</h1>

<p>
    <div class="row">
        <div class="col-sm-12 col-md-10 mb-3">
            <a asp-action="Create" class="btn btn-success">Adicionar um novo Lead</a>
        </div>
        <div class="col-sm-12 col-md-2 text-md-end mb-3">
            <a asp-action="Favoritos" class="btn btn-success container-md">Favoritos</a>
        </div>
    </div>
   
  
     <form asp-action="index">
        <div class="row">
            <div class="col-sm-12 col-md-10 mb-3">
                <input name="search" class="form-control" placeholder="Pesquisar" />
            </div>
            <div class="col-sm-12 col-md-2 text-md-end mb-3">
                <button type="submit" class="btn btn-secondary container-md">Pesquisar</button>
            </div>
        </div>
     </form>

</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interesse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmpresaPretendida)
                </th>
            </tr>
        </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interesse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpresaPretendida)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Visualizar</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluír</a>

             </td>
                <td>
                    <form asp-action="ToggleFavorito" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-primary">
                            @((item.Favorito ? "Remover dos Favoritos" : "Adicionar aos Favoritos"))
                        </button>
                    </form>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>
